@model IEnumerable<FitnessManagementSystem.Models.Attendance>

@{
    ViewData["Title"] = "Attendance Management";
    Layout = "~/Areas/Dashboard/Views/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">📊 Attendance Management</h3>
            <a asp-area="Dashboard" asp-controller="Attendance" asp-action="AddAttendance" class="btn btn-primary">
                ➕ Mark Attendance
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- Search by Date -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-8">
                        <label for="attendanceDate" class="form-label">Filter by Date</label>
                        <input type="date" class="form-control" id="attendanceDate" name="attendanceDate" value="@ViewBag.AttendanceDate">
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-primary w-100">Search</button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">Clear</a>
                    </div>
                </form>
            </div>
        </div>

        <table class="table table-striped table-bordered table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Marked By</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    // Group by date and trainer to show unique dates
                    var groupedAttendances = Model
                    .GroupBy(a => new { a.AttendanceDate, a.TrainerId, a.Trainer })
                    .Select(g => new
                    {
                        Date = g.Key.AttendanceDate,
                        Trainer = g.Key.Trainer,
                        AttendanceIds = g.Select(a => a.AttendanceId).ToList()
                    })
                    .OrderByDescending(g => g.Date)
                    .ToList();

                    int count = 1;
                    foreach (var group in groupedAttendances)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@group.Date.ToString("MM/dd/yyyy")</td>
                            <td>@group.Trainer?.FirstName @group.Trainer?.LastName</td>
                            <td>
                                <a asp-area="Dashboard" asp-controller="Attendance" asp-action="EditAttendance"
                                   asp-route-date="@group.Date.ToString("yyyy-MM-dd")"
                                   class="btn btn-sm btn-warning me-1">
                                    ✏️ Edit
                                </a>
                                <button type="button" class="btn btn-sm btn-danger"
                                        onclick="deleteAttendanceByDate('@group.Date.ToString("yyyy-MM-dd")')">
                                    🗑️ Delete
                                </button>
                            </td>
                        </tr>
                        count++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-muted text-center">No attendance records found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function deleteAttendanceByDate(date) {
            if (confirm('Are you sure you want to delete all attendance records for ' + date + '?')) {
                window.location.href = '@Url.Action("DeleteAttendanceByDate", "Attendance")' + '?date=' + date;
            }
        }

        // Set today's date as default for date filter
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.getElementById('attendanceDate');
            if (!dateInput.value) {
                dateInput.value = new Date().toISOString().split('T')[0];
            }
        });
    </script>
}