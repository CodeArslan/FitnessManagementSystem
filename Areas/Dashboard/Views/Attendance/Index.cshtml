@model IEnumerable<FitnessManagementSystem.Models.Attendance>

@{
    ViewData["Title"] = "Attendance Management";
    Layout = "~/Areas/Dashboard/Views/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">📊 Attendance Management</h3>
            <a asp-area="Dashboard" asp-controller="Attendance" asp-action="AddAttendance" class="btn btn-primary">
                ➕ Mark Attendance
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Search by Date -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-8">
                        <label for="attendanceDate" class="form-label">Filter by Date</label>
                        <input type="date" class="form-control" id="attendanceDate" name="attendanceDate" value="@ViewBag.AttendanceDate">
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-primary w-100 me-2">Search</button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Clear</a>
                    </div>
                </form>
            </div>
        </div>

        <table class="table table-striped table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Member</th>
                    <th>Status</th>
                    <th>Trainer</th>
                    <th>Marked At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int count = 1;
                    foreach (var attendance in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@attendance.AttendanceDate.ToString("MM/dd/yyyy")</td>
                            <td>@attendance.Member?.FirstName @attendance.Member?.LastName</td>
                            <td>
                                <span class="badge @(attendance.Status == "Present" ? "bg-success" : "bg-danger")">
                                    @attendance.Status
                                </span>
                            </td>
                            <td>@attendance.Trainer?.FirstName @attendance.Trainer?.LastName</td>
                            <td>@attendance.MarkedAt.ToString("MM/dd/yyyy hh:mm tt")</td>
                            <td>
                                <a asp-area="Dashboard" asp-controller="Attendance" asp-action="EditAttendance"
                                   asp-route-date="@attendance.AttendanceDate.ToString("yyyy-MM-dd")"
                                   class="btn btn-sm btn-warning me-1">
                                    ✏️ Edit Date
                                </a>
                                <a asp-area="Dashboard" asp-controller="Attendance" asp-action="DeleteAttendanceByDate"
                                   asp-route-date="@attendance.AttendanceDate.ToString("yyyy-MM-dd")"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete ALL attendance records for @attendance.AttendanceDate.ToString("MM/dd/yyyy")?');">
                                    🗑️ Delete Date
                                </a>
                            </td>
                        </tr>
                        count++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-muted text-center">No attendance records found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.getElementById('attendanceDate');
            if (!dateInput.value) {
                dateInput.value = new Date().toISOString().split('T')[0];
            }
        });
    </script>
}