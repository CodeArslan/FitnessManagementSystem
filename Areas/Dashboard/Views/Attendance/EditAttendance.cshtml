@model List<FitnessManagementSystem.Models.Attendance>

@{
    ViewData["Title"] = "Edit Attendance";
    Layout = "~/Areas/Dashboard/Views/_Layout.cshtml";
    var attendanceDate = ViewBag.AttendanceDate;
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h3 class="text-center mb-4">✏️ Edit Attendance</h3>

        <form asp-area="Dashboard" asp-controller="Attendance" asp-action="EditAttendance" method="post">
            <input type="hidden" name="AttendanceDate" value="@attendanceDate.ToString("yyyy-MM-dd")" />

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Edit Attendance for @attendanceDate.ToString("MM/dd/yyyy")</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Member Name</th>
                                        <th>Current Status</th>
                                        <th>New Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var attendance in Model)
                                    {
                                        <tr>
                                            <td>@attendance.Member?.FirstName @attendance.Member?.LastName</td>
                                            <td>
                                                <span class="badge @(attendance.Status == "Present" ? "bg-success" : "bg-danger")">
                                                    @attendance.Status
                                                </span>
                                            </td>
                                            <td>
                                                <select name="Status_@attendance.AttendanceId" class="form-select">
                                                    <option value="Present" selected="@(attendance.Status == "Present")">Present</option>
                                                    <option value="Absent" selected="@(attendance.Status == "Absent")">Absent</option>
                                                </select>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            No attendance records found for this date.
                        </div>
                    }
                </div>
            </div>

            <div class="text-end mt-3">
                <button type="submit" class="btn btn-success px-4">Update Attendance</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>