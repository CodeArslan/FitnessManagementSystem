@model FitnessManagementSystem.Models.TrainerShift

@{
    ViewData["Title"] = "Assign Schedule";
    Layout = "~/Areas/Dashboard/Views/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h3 class="text-center mb-4">📅 Assign Schedule to Trainer(s)</h3>

        <form asp-area="Dashboard" asp-controller="TrainerScheduling" asp-action="AddTrainerSchedule" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <!-- Date -->
                <div class="col-md-6 mb-3">
                    <label for="Date" class="form-label">Date</label>
                    <input name="Date" id="Date" class="form-control" type="date" required />
                    <span class="text-danger field-validation-valid" data-valmsg-for="Date" data-valmsg-replace="true"></span>
                </div>

                <!-- Shift with Add Button -->
                <div class="col-md-6 mb-3">
                    <label for="ShiftId" class="form-label">Shift</label>
                    <div class="input-group">
                        <select name="ShiftId" id="ShiftId" class="form-select" required>
                            <option value="">Select Shift</option>
                            @if (ViewBag.Shifts != null)
                            {
                                foreach (var shift in ViewBag.Shifts)
                                {
                                    <option value="@shift.Value">@shift.Text</option>
                                }
                            }
                        </select>
                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addShiftModal">
                            ➕
                        </button>
                    </div>
                    <span class="text-danger field-validation-valid" data-valmsg-for="ShiftId" data-valmsg-replace="true"></span>
                </div>

                <!-- Trainers with Add Button -->
                <div class="col-12 mb-3">
                    <label for="TrainerIds" class="form-label">Trainers</label>
                    <div class="input-group">
                        <select name="TrainerIds" id="TrainerIds" class="form-select" multiple required>
                            @if (ViewBag.Trainers != null)
                            {
                                foreach (var trainer in ViewBag.Trainers)
                                {
                                    <option value="@trainer.Value">@trainer.Text</option>
                                }
                            }
                        </select>
                        <a href="@Url.Action("AddTrainer", "Trainer", new { area = "Dashboard" })" class="btn btn-outline-primary">
                            ➕
                        </a>
                    </div>
                    <small class="form-text text-muted">Hold Ctrl (or Cmd on Mac) to select multiple trainers</small>
                    <span class="text-danger field-validation-valid" data-valmsg-for="TrainerIds" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="text-end mt-3">
                <button type="submit" class="btn btn-primary px-4">Assign Schedule</button>
            </div>
        </form>
    </div>
</div>

<!-- Add Shift Modal -->
<div class="modal fade" id="addShiftModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Shift</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- This will be loaded via AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // Load modal content when modal is shown
            $('#addShiftModal').on('show.bs.modal', function () {
                $(this).find('.modal-body').load('@Url.Action("AddShift", "TrainerScheduling")');
            });

            // Handle form submission via AJAX
            $(document).on('submit', 'form', function(e) {
                if ($(this).attr('id') === 'addShiftForm') {
                    e.preventDefault();
                    $.post('@Url.Action("AddShift", "TrainerScheduling")', $(this).serialize(), function(response) {
                        if (response.success) {
                            $('#addShiftModal').modal('hide');
                            refreshShifts();
                            alert(response.message);
                        } else {
                            alert(response.message);
                        }
                    });
                }
            });

            // Refresh shifts dropdown after adding new shift
            function refreshShifts() {
                $.get('@Url.Action("GetShifts", "TrainerScheduling")', function(data) {
                    $('#ShiftId').empty().append('<option value="">Select Shift</option>');
                    $.each(data, function(index, item) {
                        $('#ShiftId').append($('<option>', {
                            value: item.shiftId,
                            text: item.name
                        }));
                    });
                });
            }
        });
    </script>
}