@model IEnumerable<FitnessManagementSystem.Models.Plan>

@{
    ViewData["Title"] = "Member Plans";
    Layout = "~/Areas/Dashboard/Views/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">📋 Member Plans</h3>
            <a asp-area="Dashboard" asp-controller="Plan" asp-action="AddPlan" class="btn btn-primary">
                ➕ Add New Plan
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <table class="table table-striped table-bordered table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Member</th>
                    <th>Plan Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Created</th>
                    <th>Last Updated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int count = 1;
                    foreach (var plan in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@plan.Member?.FirstName @plan.Member?.LastName</td>
                            <td>
                                <span class="badge @(plan.PlanType == "Workout" ? "bg-warning" : "bg-success")">
                                    @plan.PlanType
                                </span>
                            </td>
                            <td>@plan.StartDate.ToString("MM/dd/yyyy")</td>
                            <td>@plan.EndDate.ToString("MM/dd/yyyy")</td>
                            <td>
                                <small>
                                    @plan.CreatedAt.ToString("MM/dd/yyyy")<br />
                                    <span class="text-muted">@plan.CreatedAt.ToString("hh:mm tt")</span>
                                </small>
                            </td>
                            <td>
                                <small>
                                    @plan.UpdatedAt.ToString("MM/dd/yyyy")<br />
                                    <span class="text-muted">@plan.UpdatedAt.ToString("hh:mm tt")</span>
                                </small>
                            </td>
                            <td>
                                <a asp-area="Dashboard" asp-controller="Plan" asp-action="EditPlan" asp-route-id="@plan.Id"
                                   class="btn btn-sm btn-warning me-1">
                                    ✏️ Edit
                                </a>
                                <a asp-area="Dashboard" asp-controller="Plan" asp-action="DeletePlan" asp-route-id="@plan.Id"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this plan?');">
                                    🗑️ Delete
                                </a>
                            </td>
                        </tr>
                        count++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-muted text-center">No plans found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>