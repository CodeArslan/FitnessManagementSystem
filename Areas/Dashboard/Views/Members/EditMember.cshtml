@model FitnessManagementSystem.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit Member";
    Layout = "~/Areas/Dashboard/Views/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h3 class="text-center mb-4">Edit Member</h3>

        <form asp-area="Dashboard" asp-controller="Members" asp-action="EditMember" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="JoinDate" class="form-label">Join Date</label>
                    <input asp-for="JoinDate" class="form-control" type="date" />
                    <span asp-validation-for="JoinDate" class="text-danger"></span>
                </div>

                <div class="col-12 mb-3">
                    <label asp-for="FitnessGoal" class="form-label">Fitness Goal</label>
                    <textarea asp-for="FitnessGoal" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="FitnessGoal" class="text-danger"></span>
                </div>

                <div class="col-md-3 mb-3">
                    <label asp-for="HeightFeet" class="form-label">Height (Feet)</label>
                    <input asp-for="HeightFeet" class="form-control" />
                    <span asp-validation-for="HeightFeet" class="text-danger"></span>
                </div>

                <div class="col-md-3 mb-3">
                    <label asp-for="HeightInches" class="form-label">Height (Inches)</label>
                    <input asp-for="HeightInches" class="form-control" />
                    <span asp-validation-for="HeightInches" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Weight" class="form-label">Weight</label>
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>

                <!-- Optional Password Change -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">New Password</label>
                    <input type="password" name="NewPassword" class="form-control" placeholder="Enter new password (optional)" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Confirm Password</label>
                    <input type="password" name="ConfirmPassword" class="form-control" placeholder="Confirm new password" />
                </div>
            </div>

            <div class="text-end mt-3">
                <button type="submit" class="btn btn-success px-4">Update</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}