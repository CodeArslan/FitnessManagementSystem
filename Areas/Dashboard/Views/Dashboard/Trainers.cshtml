@{
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="dashboard-card">
            <div class="card-header">
                <h4 class="mb-0">Manage Trainers</h4>
            </div>
            <div class="card-body">
                <!-- Quick Actions -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <button class="btn btn-primary w-100" onclick="showAddTrainerForm()">
                            <i class="fas fa-user-plus me-2"></i>Add New Trainer
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-success w-100">
                            <i class="fas fa-calendar me-2"></i>Assign Shifts
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-info w-100">
                            <i class="fas fa-chart-bar me-2"></i>View Reports
                        </button>
                    </div>
                </div>

                <!-- Add Trainer Form (Initially Hidden) -->
                <div id="addTrainerForm" class="dashboard-card mb-4" style="display: none;">
                    <div class="card-header">
                        <h5 class="mb-0">Add New Trainer</h5>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">First Name</label>
                                        <input type="text" class="form-control" placeholder="Enter first name">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Last Name</label>
                                        <input type="text" class="form-control" placeholder="Enter last name">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Email</label>
                                        <input type="email" class="form-control" placeholder="Enter email">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Phone</label>
                                        <input type="tel" class="form-control" placeholder="Enter phone number">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Specialization</label>
                                        <select class="form-control">
                                            <option value="">Select Specialization</option>
                                            <option value="yoga">Yoga</option>
                                            <option value="cardio">Cardio</option>
                                            <option value="strength">Strength Training</option>
                                            <option value="crossfit">CrossFit</option>
                                            <option value="pilates">Pilates</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Shift</label>
                                        <select class="form-control">
                                            <option value="">Select Shift</option>
                                            <option value="morning">Morning (6AM - 2PM)</option>
                                            <option value="evening">Evening (2PM - 10PM)</option>
                                            <option value="full">Full Day</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Experience (Years)</label>
                                        <input type="number" class="form-control" placeholder="Years of experience">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Certification</label>
                                        <input type="text" class="form-control" placeholder="Certification details">
                                    </div>
                                </div>
                            </div>
                            <div class="text-end">
                                <button type="button" class="btn btn-secondary me-2" onclick="hideAddTrainerForm()">Cancel</button>
                                <button type="submit" class="btn btn-primary">Add Trainer</button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Trainers List -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Specialization</th>
                                <th>Shift</th>
                                <th>Experience</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Sample Data - Replace with real data from database -->
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/40" class="rounded-circle me-3" alt="Trainer">
                                        <div>
                                            <strong>John Smith</strong><br>
                                            <small class="text-muted">john@email.com</small>
                                        </div>
                                    </div>
                                </td>
                                <td>Strength Training</td>
                                <td>Morning</td>
                                <td>5 years</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>
                                    <button class="btn btn-sm btn-warning me-1" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-info me-1" title="View">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/40" class="rounded-circle me-3" alt="Trainer">
                                        <div>
                                            <strong>Sarah Johnson</strong><br>
                                            <small class="text-muted">sarah@email.com</small>
                                        </div>
                                    </div>
                                </td>
                                <td>Yoga & Pilates</td>
                                <td>Evening</td>
                                <td>3 years</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>
                                    <button class="btn btn-sm btn-warning me-1" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-info me-1" title="View">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/40" class="rounded-circle me-3" alt="Trainer">
                                        <div>
                                            <strong>Mike Davis</strong><br>
                                            <small class="text-muted">mike@email.com</small>
                                        </div>
                                    </div>
                                </td>
                                <td>Cardio</td>
                                <td>Morning</td>
                                <td>7 years</td>
                                <td><span class="badge bg-warning">On Leave</span></td>
                                <td>
                                    <button class="btn btn-sm btn-warning me-1" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-info me-1" title="View">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Stats Cards -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="stat-card">
                            <i class="fas fa-dumbbell fa-2x"></i>
                            <div class="stat-number">12</div>
                            <div class="stat-label">Total Trainers</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <i class="fas fa-user-check fa-2x"></i>
                            <div class="stat-number">10</div>
                            <div class="stat-label">Active Trainers</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <i class="fas fa-clock fa-2x"></i>
                            <div class="stat-number">45</div>
                            <div class="stat-label">Weekly Sessions</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <i class="fas fa-star fa-2x"></i>
                            <div class="stat-number">4.8</div>
                            <div class="stat-label">Avg Rating</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showAddTrainerForm() {
            document.getElementById('addTrainerForm').style.display = 'block';
        }

        function hideAddTrainerForm() {
            document.getElementById('addTrainerForm').style.display = 'none';
        }

        // Simple form validation
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                alert('Trainer added successfully!');
                hideAddTrainerForm();
                form.reset();
            });
        });

        // Delete confirmation
        document.querySelectorAll('.btn-danger').forEach(button => {
            button.addEventListener('click', function() {
                if (confirm('Are you sure you want to delete this trainer?')) {
                    alert('Trainer deleted successfully!');
                }
            });
        });
    </script>
}