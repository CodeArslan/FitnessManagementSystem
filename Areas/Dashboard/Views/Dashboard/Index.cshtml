@{
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <!-- Welcome Message -->
    <div class="col-12">
        <div class="dashboard-card">
            <div class="card-body text-center">
                <h2>Welcome to Your Professional Dashboard! 🎯</h2>
                <p class="lead">You are logged in as: <strong>@User.Identity.Name</strong></p>
                <p class="h5">
                    <span class="badge bg-primary">
                        @if (User.IsInRole("Admin"))
                        {
                            <text>Administrator</text>
                        }
                        else if (User.IsInRole("Trainer"))
                        {
                            <text>Certified Trainer</text>
                        }
                    </span>
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Role-Specific Dashboard Content -->
@if (User.IsInRole("Admin"))
{
    <!-- ADMIN DASHBOARD -->
    <div class="row">
        <!-- Admin Stats -->
        <div class="col-md-3">
            <div class="stat-card">
                <i class="fas fa-users fa-2x"></i>
                <div class="stat-number">156</div>
                <div class="stat-label">Total Members</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <i class="fas fa-dumbbell fa-2x"></i>
                <div class="stat-number">12</div>
                <div class="stat-label">Active Trainers</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <i class="fas fa-dollar-sign fa-2x"></i>
                <div class="stat-number">$12,540</div>
                <div class="stat-label">Monthly Revenue</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <i class="fas fa-calendar-check fa-2x"></i>
                <div class="stat-number">45</div>
                <div class="stat-label">Today's Sessions</div>
            </div>
        </div>
    </div>

    <!-- Admin Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="dashboard-card">
                <div class="card-header">
                    <h4 class="mb-0">Admin Quick Actions</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a href="@Url.Action("ManageMembers", "Dashboard", new { area = "Dashboard" })" class="btn btn-primary w-100 py-3">
                                <i class="fas fa-user-plus fa-2x mb-2"></i><br>
                                Add New Member
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="@Url.Action("ManageTrainers", "Dashboard", new { area = "Dashboard" })" class="btn btn-primary w-100 py-3">
                                <i class="fas fa-dumbbell fa-2x mb-2"></i><br>
                                Manage Trainers
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="@Url.Action("TrainerScheduling", "Dashboard", new { area = "Dashboard" })" class="btn btn-primary w-100 py-3">
                                <i class="fas fa-calendar-alt fa-2x mb-2"></i><br>
                                Assign Shifts
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (User.IsInRole("Trainer"))
{
    <!-- TRAINER DASHBOARD -->
    <div class="row">
        <!-- Trainer Stats -->
        <div class="col-md-3">
            <div class="stat-card">
                <i class="fas fa-users fa-2x"></i>
                <div class="stat-number">25</div>
                <div class="stat-label">My Clients</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <i class="fas fa-calendar-alt fa-2x"></i>
                <div class="stat-number">8</div>
                <div class="stat-label">Today's Sessions</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <i class="fas fa-tasks fa-2x"></i>
                <div class="stat-number">15</div>
                <div class="stat-label">Pending Plans</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <i class="fas fa-star fa-2x"></i>
                <div class="stat-number">4.8</div>
                <div class="stat-label">My Rating</div>
            </div>
        </div>
    </div>

    <!-- Trainer Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="dashboard-card">
                <div class="card-header">
                    <h4 class="mb-0">Trainer Quick Actions</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a href="@Url.Action("WorkoutPlans", "Dashboard", new { area = "Dashboard" })" class="btn btn-primary w-100 py-3">
                                <i class="fas fa-running fa-2x mb-2"></i><br>
                                Create Workout Plan
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="@Url.Action("MarkAttendance", "Dashboard", new { area = "Dashboard" })" class="btn btn-primary w-100 py-3">
                                <i class="fas fa-clipboard-check fa-2x mb-2"></i><br>
                                Mark Attendance
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="@Url.Action("ClassScheduling", "Dashboard", new { area = "Dashboard" })" class="btn btn-primary w-100 py-3">
                                <i class="fas fa-clock fa-2x mb-2"></i><br>
                                My Schedule
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Recent Activity -->
<div class="row mt-4">
    <div class="col-12">
        <div class="dashboard-card">
            <div class="card-header">
                <h4 class="mb-0">Recent Activity</h4>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <div class="list-group-item">
                        <i class="fas fa-user-plus text-success me-2"></i>
                        New member registration - John Doe
                        <span class="float-end text-muted">2 hours ago</span>
                    </div>
                    <div class="list-group-item">
                        <i class="fas fa-dumbbell text-primary me-2"></i>
                        Workout session completed
                        <span class="float-end text-muted">4 hours ago</span>
                    </div>
                    <div class="list-group-item">
                        <i class="fas fa-credit-card text-info me-2"></i>
                        Membership payment received
                        <span class="float-end text-muted">1 day ago</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>