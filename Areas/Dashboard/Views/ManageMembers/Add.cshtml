@model FitnessManagementSystem.Models.ApplicationUser
@{
    ViewData["Title"] = "Add Member";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Add New Member</h2>

    <form asp-action="Add" method="post" class="w-50 mx-auto">
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="HeightFeet" class="form-label">Height (Feet)</label>
            <input asp-for="HeightFeet" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="HeightInches" class="form-label">Height (Inches)</label>
            <input asp-for="HeightInches" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Weight" class="form-label">Weight (lbs)</label>
            <input asp-for="Weight" class="form-control" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success">💾 Save</button>
            <a href="@Url.Action("Index", "ManageMembers")" class="btn btn-secondary">🔙 Back</a>
        </div>
    </form>
</div>
