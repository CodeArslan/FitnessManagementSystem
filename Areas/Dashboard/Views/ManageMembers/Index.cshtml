@model IEnumerable<FitnessManagementSystem.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Members";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Manage Members</h2>

    <div class="text-end mb-3">
        <a href="@Url.Action("Add", "ManageMembers")" class="btn btn-primary">➕ Add Member</a>
    </div>

    <table class="table table-bordered table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>@member.FirstName @member.LastName</td>
                    <td>@member.Email</td>
                    <td>@member.HeightFeet' @member.HeightInches"</td>
                    <td>@member.Weight lbs</td>
                    <td>
                        <a href="@Url.Action("Details", "ManageMembers", new { id = member.Id })" class="btn btn-info btn-sm">👁️ View</a>
                        <a href="@Url.Action("Edit", "ManageMembers", new { id = member.Id })" class="btn btn-warning btn-sm">✏️ Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
