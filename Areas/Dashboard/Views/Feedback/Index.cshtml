@{
    ViewData["Title"] = "Monitor Feedback";
    Layout = "~/Areas/Dashboard/Views/_Layout.cshtml";
}
@model IEnumerable<FitnessManagementSystem.Models.Feedback>

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">⭐ Member Feedback</h3>
        </div>

        <table class="table table-striped table-bordered table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Date</th>
                    <th>Member</th>
                    <th>Trainer</th>
                    <th>Rating</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CreatedAt.ToShortDateString()</td>
                            <td>@item.User.UserName</td>
                            <td>@item.Appointment.Trainer.UserName</td>
                            <td>
                                @for (int i = 0; i < item.Rating; i++)
                                {
                                    <span class="text-warning">&#9733;</span>
                                }
                            </td>
                            <td>@item.Comment</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-muted text-center">No feedback found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
