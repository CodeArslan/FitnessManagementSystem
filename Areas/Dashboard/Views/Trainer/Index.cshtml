@model IEnumerable<FitnessManagementSystem.Models.ApplicationUser>

@{
    ViewData["Title"] = "Trainer Details";
    Layout = "~/Areas/Dashboard/Views/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">💪 Trainer Details</h3>
            <a asp-area="Dashboard" asp-controller="Trainer" asp-action="AddTrainer" class="btn btn-primary">
                ➕ Add New Trainer
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <table class="table table-striped table-bordered table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Specialization</th>
                    <th>Certification</th>
                    <th>Hire Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int count = 1;
                    foreach (var user in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@user.Email</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Specialization</td>
                            <td>@user.Certification</td>
                            <td>@user.HireDate?.ToString("MM/dd/yyyy")</td>
                            <td>
                                <a asp-area="Dashboard" asp-controller="Trainer" asp-action="EditTrainer" asp-route-id="@user.Id"
                                   class="btn btn-sm btn-warning me-1">
                                    ✏️ Edit
                                </a>
                                <a asp-area="Dashboard" asp-controller="Trainer" asp-action="DeleteTrainer" asp-route-id="@user.Id"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this trainer?');">
                                    🗑️ Delete
                                </a>
                            </td>
                        </tr>
                        count++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-muted text-center">No trainers found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>