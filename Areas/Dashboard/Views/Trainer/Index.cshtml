@{
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="row" style="min-height: 60vh;">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 bg-dark text-white p-3 d-flex flex-column" style="min-height: 60vh;">
        <h4 class="mb-4 text-center">Trainer Panel</h4>
        <ul class="nav flex-column flex-grow-1">
            <li class="nav-item"><a class="nav-link text-white" href="/Dashboard/Trainer/WorkoutPlans">🏋️ Workout Plans</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/Dashboard/Trainer/DietPlans">🥗 Diet Plans</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/Dashboard/Trainer/ClassScheduling">🗓️ Class Scheduling</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/Dashboard/Trainer/MemberProgress">📊 Member Progress</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/Dashboard/Trainer/MarkAttendance">✅ Attendance</a></li>
        </ul>
    </div>

    <!-- Content -->
    <div class="col-md-9 col-lg-10 p-5">
        <h2>@ViewData["Title"]</h2>
        <p class="text-muted">@ViewData["Description"]</p>

        <div class="card shadow-sm mt-4 p-4">
            <h5>Overview</h5>
            <p>Welcome, Trainer! Here you can manage your classes, workout plans, and track member progress.</p>
        </div>
    </div>
</div>
