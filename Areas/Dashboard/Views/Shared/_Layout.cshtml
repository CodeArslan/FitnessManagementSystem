@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    bool isAdmin = controller?.Equals("Admin", StringComparison.OrdinalIgnoreCase) ?? false;
    bool isTrainer = controller?.Equals("Trainer", StringComparison.OrdinalIgnoreCase) ?? false;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: url('https://images.unsplash.com/photo-1605296867304-46d5465a13f1?auto=format&fit=crop&w=1400&q=80') no-repeat center center fixed;
            background-size: cover;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .dashboard-wrapper {
            display: flex;
            flex: 1;
            overflow: hidden;
        }

        .sidebar {
            width: 260px;
            background: rgba(0, 0, 0, 0.85);
            color: white;
            padding: 20px 15px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
        }

            .sidebar h4 {
                text-align: center;
                font-weight: 600;
                margin-bottom: 25px;
            }

            .sidebar .nav-link {
                color: #ddd;
                font-weight: 500;
                padding: 10px 15px;
                border-radius: 10px;
                display: block;
                margin-bottom: 8px;
                transition: all 0.2s ease-in-out;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background: orange;
                    color: white;
                    text-decoration: none;
                }

        .content-area {
            margin-left: 260px;
            flex: 1;
            padding: 40px;
            background-color: rgba(255, 255, 255, 0.88);
            border-radius: 20px 0 0 0;
            min-height: calc(100vh - 70px);
        }

        footer {
            text-align: center;
            background-color: rgba(0, 0, 0, 0.85);
            color: white;
            padding: 10px 0;
            margin-top: auto;
        }


    </style>
</head>

<body>
    <div class="dashboard-wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            @if (isAdmin)
            {
                <h4>Admin Panel</h4>
                <nav class="nav flex-column">
                    <a class="nav-link" href="/Dashboard/Admin/Index">🏠 Dashboard</a>
                    <a class="nav-link" href="/Dashboard/ManageMembers/Index">👥 Manage Members</a>
                    <a class="nav-link" href="/Dashboard/Admin/ManageTrainers">💪 Manage Trainers</a>
                    <a class="nav-link" href="/Dashboard/Admin/TrainerScheduling">🗓️ Trainer Scheduling</a>
                    <a class="nav-link" href="/Dashboard/Admin/MonitorFeedback">⭐ Monitor Feedback</a>
                </nav>
            }
            else if (isTrainer)
            {
                <h4>Trainer Panel</h4>
                <nav class="nav flex-column">
                    <a class="nav-link" href="/Dashboard/Trainer/Index">🏠 Dashboard</a>
                    <a class="nav-link" href="/Dashboard/Trainer/WorkoutPlans">🏋️ Workout Plans</a>
                    <a class="nav-link" href="/Dashboard/Trainer/DietPlans">🥗 Diet Plans</a>
                    <a class="nav-link" href="/Dashboard/Trainer/MarkAttendance">✅ Mark Attendance</a>
                    <a class="nav-link" href="/Dashboard/Trainer/ClassScheduling">📅 Class Scheduling</a>
                    <a class="nav-link" href="/Dashboard/Trainer/MemberProgress">📊 Member Progress</a>
                </nav>
            }
            else
            {
                <h4>Dashboard</h4>
                <p class="text-center text-muted">No role detected</p>
            }
        </div>

        <!-- Main Content -->
        <div class="content-area">
            <h2>@ViewData["Title"]</h2>
            <p>@ViewData["Description"]</p>
            <hr />
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>© @DateTime.Now.Year Fitness Management System | Designed with ❤️ for health and strength</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
