@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                    <hr />

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- First & Last Name -->
                        <div class="row g-3 mb-3">
                            <div class="col-md-6 form-floating">
                                <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />
                                <label asp-for="Input.FirstName">First Name</label>
                            </div>
                            <div class="col-md-6 form-floating">
                                <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                                <label asp-for="Input.LastName">Last Name</label>
                            </div>
                        </div>

                        <!-- Height & Weight -->
                        <div class="row g-3 mb-3">
                            <div class="col-md-4 form-floating">
                                <input asp-for="Input.HeightFeet" class="form-control" placeholder="Feet" />
                                <label asp-for="Input.HeightFeet">Height (ft)</label>
                            </div>
                            <div class="col-md-4 form-floating">
                                <input asp-for="Input.HeightInches" class="form-control" placeholder="Inches" />
                                <label asp-for="Input.HeightInches">Height (in)</label>
                            </div>
                            <div class="col-md-4 form-floating">
                                <input asp-for="Input.Weight" class="form-control" placeholder="Weight" />
                                <label asp-for="Input.Weight">Weight (kg)</label>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email address</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button id="registerSubmit" type="submit" class="btn btn-lg rounded-3 custom-login-btn">
                                <i class="bi bi-person-plus"></i> Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <p class="text-center text-muted mt-3">
                Already have an account? <a asp-page="/Identity/Account/Login">Login here</a>
            </p>
        </div>
    </div>
</div>

<style>
    .custom-login-btn {
        background-color: #f9735b !important;
        border-color: #f9735b !important;
        color: white !important;
    }

        .custom-login-btn:hover {
            background-color: #e8654d !important;
            border-color: #e8654d !important;
            color: white !important;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}