@using FitnessManagementSystem.Data
@using Microsoft.AspNetCore.Identity
@inject ApplicationDbContext _context
@{
    var currentAction = ViewContext.RouteData.Values["action"] as string;
    var currentController = ViewContext.RouteData.Values["controller"] as string;
    var userName = User.Identity.Name ?? "Guest";
    var userRole = "";

    if (User.Identity.IsAuthenticated)
    {
        var user = _context.Users.FirstOrDefault(u => u.UserName == userName);
        if (user != null)
        {
            userRole = user.Role ?? "";
        }
    }

    bool isMember = User.Identity.IsAuthenticated && userRole == "Member";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet">

    <title>@ViewBag.Title - Training Studio</title>

    <!-- Additional CSS Files -->
    <link href="~/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <link href="~/css/font-awesome.css" type="text/css" rel="stylesheet" />
    <link href="~/css/templatemo-training-studio.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" /> <!-- Move your custom CSS last -->


    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->

    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky" style="background-color:#1a1a1a; color:#fff;">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="@Url.Action("Index", "Home")" class="logo">Training<em> Studio</em></a>
                        <!-- ***** Logo End ***** -->
                   <ul class="nav">
    <!-- Home -->
    <li>
        <a href="@Url.Action("Index", "Home", new { area = "" })"
           class="@(currentAction == "Index" ? "active" : "")">
            Home
        </a>
    </li>

                            @* Only show the dropdown if the user is a member *@
                            @if (isMember)
                            {
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="cursor:pointer;">
                                        Services <b class="caret"></b>
                                    </a>

                                    <ul class="dropdown-menu" style="background:#1a1a1a; padding:10px;">
                                        <li>
                                            <a href="@Url.Action("ViewProgress", "LogWorkout", new { area = "" })" style="color:white;">
                                                Progress
                                            </a>
                                        </li>

                                        <li>
                                            <a href="@Url.Action("BookAppointment", "Appointment", new { area = "" })" style="color:white;">
                                                Appointment
                                            </a>
                                        </li>

                                        <li>
                                            <a href="@Url.Action("Index", "MembershipPlans", new { area = "" })" style="color:white;">
                                                Plans
                                            </a>
                                        </li>

                                        <li>
                                            <a href="@Url.Action("GiveFeedback", "Feedback", new { area = "" })" style="color:white !important;">
                                                Feedback
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                            <!-- Authenticated user menu -->
    @if (User.Identity.IsAuthenticated)
    {
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                @User.Identity.Name <b class="caret"></b>
            </a>
            <ul class="dropdown-menu" style="background:#1a1a1a; padding:10px;">
                <li>
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                        <button type="submit" class="dropdown-item" 
                                style="background:none; border:none; color:white;">
                            Logout
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="main-button">
            <a href="/Identity/Account/Login"
               style="display:flex; align-items:center; justify-content:center; color:white;">
                Log In
            </a>
        </li>

        <li class="main-button">
            <a href="/Identity/Account/Register">Sign Up</a>
        </li>
    }
</ul>


                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->
    <main>
        @RenderBody()
    </main>


    <!-- ***** Footer Start ***** -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p>
                        Copyright &copy; @DateTime.Now.Year Fitness Managemenet
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="~/js/jquery-2.1.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="~/js/scrollreveal.min.js"></script>
    <script src="~/js/waypoints.min.js"></script>
    <script src="~/js/jquery.counterup.min.js"></script>
    <script src="~/js/imgfix.min.js"></script>
    <script src="~/js/mixitup.js"></script>
    <script src="~/js/accordions.js"></script>

    <!-- Global Init -->
    <script src="~/js/custom.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>