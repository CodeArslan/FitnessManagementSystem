@{
    ViewData["Title"] = "Log Workout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Log Workout Session</h3>
                </div>
                <div class="card-body">
                    <form asp-action="LogWorkout" method="post">
                        <div class="form-group mb-3">
                            <label for="date">Date</label>
                            <input type="datetime-local" class="form-control" id="date" name="date" required value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")">
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="duration">Duration (minutes)</label>
                                    <input type="number" class="form-control" id="duration" name="duration" required min="1">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="calories">Calories Burned</label>
                                    <input type="number" class="form-control" id="calories" name="calories" required min="1">
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="notes">Notes</label>
                            <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
                        </div>

                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-primary btn-lg">Save Workout</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
