@model IEnumerable<FMS.Models.ProgressRecord>

@{
    ViewData["Title"] = "Member Progress";
}

<div class="container">
    <h2 class="my-4">Member Progress</h2>
    
    @if (!Model.Any())
    {
        <div class="alert alert-warning">No progress records found for this member.</div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Weight (kg)</th>
                    <th>BMI</th>
                    <th>Body Fat %</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr>
                        <td>@record.RecordedAt.ToShortDateString()</td>
                        <td>@record.Weight</td>
                        <td>@record.BMI.ToString("0.00")</td>
                        <td>@record.BodyFatPercentage</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <a asp-action="Dashboard" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>
