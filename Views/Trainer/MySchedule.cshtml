@model IEnumerable<FMS.Models.TrainerShift>

@{
    ViewData["Title"] = "My Schedule";
}

<div class="container">
    <h2 class="my-4">My Weekly Schedule</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">You have no assigned shifts yet.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Day</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var shift in Model)
                    {
                        <tr>
                            <td>@shift.DayOfWeek</td>
                            <td>@DateTime.Today.Add(shift.StartTime).ToString("hh:mm tt")</td>
                            <td>@DateTime.Today.Add(shift.EndTime).ToString("hh:mm tt")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
