@model IEnumerable<FMS.Models.ApplicationUser>

@{
    ViewData["Title"] = "Manage Trainers";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h1>Manage Trainers</h1>
        <a asp-action="CreateTrainer" class="btn btn-primary">Add New Trainer</a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Trainer List</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Username</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>@user.UserName</td>
                                <td>
                                    <a asp-action="ManageShifts" asp-route-trainerId="@user.Id" class="btn btn-info btn-sm">Manage Shifts</a>
                                    <a asp-action="DeleteTrainer" asp-route-id="@user.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this trainer?');">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
