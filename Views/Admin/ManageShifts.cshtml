@model IEnumerable<FMS.Models.TrainerShift>

@{
    ViewData["Title"] = "Manage Shifts";
}

<div class="container-fluid">
    <h1 class="mt-4">Manage Shifts for @ViewBag.TrainerName</h1>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Add New Shift</h6>
                </div>
                <div class="card-body">
                    <form asp-action="AddShift" method="post">
                        <input type="hidden" name="trainerId" value="@ViewBag.TrainerId" />
                        <div class="form-group mb-3">
                            <label>Day of Week</label>
                            <select name="dayOfWeek" class="form-control" asp-items="Html.GetEnumSelectList<DayOfWeek>()"></select>
                        </div>
                        <div class="form-group mb-3">
                            <label>Start Time</label>
                            <input type="time" name="startTime" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label>End Time</label>
                            <input type="time" name="endTime" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Add Shift</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Current Shifts</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Day</th>
                                    <th>Start Time</th>
                                    <th>End Time</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var shift in Model.OrderBy(s => s.DayOfWeek).ThenBy(s => s.StartTime))
                                {
                                    <tr>
                                        <td>@shift.DayOfWeek</td>
                                        <td>@shift.StartTime.ToString(@"hh\:mm")</td>
                                        <td>@shift.EndTime.ToString(@"hh\:mm")</td>
                                        <td>
                                            <a asp-action="DeleteShift" asp-route-id="@shift.ShiftId" class="btn btn-danger btn-sm">Remove</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
